<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".post">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bhome"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:onClick="backhome"
                    android:contentDescription="Goes backward"
                    android:drawableStart="@drawable/baseline_arrow_back_24"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="Post a Request"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_margin="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:text="Patient Name"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/username_editText"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Enter Patient Name"
                android:autofillHints="Patient Name"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:textColorHint="#6F6F6F"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:text="Mobile Number"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/username_editText2"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Enter Mobile Number"
                android:autofillHints="Mobile Number"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:textColorHint="#6F6F6F"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:text="Hospital Name"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/username_editText3"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Enter Hospital name &amp; Location"
                android:autofillHints="Hospital Name"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:textColorHint="#6F6F6F"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:text="Blood Group Needed"
                android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/blood_group_spinner"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edittext_bg"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:textColorHint="#6F6F6F"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="Units Required"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <EditText
                    android:id="@+id/username_editText5"
                    android:layout_width="320dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/edittext_bg"
                    android:ems="10"
                    android:hint="Eg:1,2"
                    android:autofillHints="Hospital Name"
                    android:paddingStart="130dp"
                    android:paddingEnd="18dp"
                    android:textColorHint="#6F6F6F"
                    android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_add_24"
                        android:layout_marginStart="-330dp"
                        android:layout_marginTop="10dp"/>
                    <ImageView
                        android:id="@+id/remove"
                        android:layout_width="17dp"
                        android:layout_height="24dp"
                        android:src="@drawable/remove"
                        android:layout_marginStart="230dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:text="Purpose/Additional Comments (Optional)"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/username_editText6"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:maxLines="5"
                android:hint="Enter the purpose of request"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:textColorHint="#6F6F6F"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttons"
                android:layout_width="356dp"
                android:layout_height="61dp"
                android:layout_marginTop="20dp"
                android:text="Post"
                android:background="@drawable/button"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:onClick="postdialog"
                android:layout_gravity="center" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
