<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

    <TextView
        style="@style/viewParent.headerText"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:text=" Track your Request" />
      <RelativeLayout
          android:orientation="horizontal"
          android:layout_marginTop="111px"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <androidx.cardview.widget.CardView
                  android:id="@+id/cardView"
                  android:layout_width="70dp"
                  android:layout_height="70dp"
                  android:layout_marginTop="20dp"
                  android:layout_centerInParent="true">

                  <ImageView
                      android:id="@+id/prof"
                      android:src="@drawable/pro"
                      android:layout_width="70dp"
                      android:layout_height="70dp"
                      android:scaleType="centerCrop" />
              </androidx.cardview.widget.CardView>

              <LinearLayout
                  android:layout_margin="5dp"
                  android:padding="5dp"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:text=" Sophia"
                      android:textColor="@color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

                  <TextView
                      android:id="@+id/loc"
                      android:drawableStart="@drawable/loc"
                      android:text="Rainy Hospital, Chennai"
                      android:textColor="#4B4B4B"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

                  <TextView
                      android:id="@+id/time"
                      android:textColor="#4B4B4B"
                      android:layout_marginLeft="3dp"
                      android:drawableStart="@drawable/time"
                      android:text="  Posted an hour ago"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

                  <LinearLayout
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <TextView
                          android:drawableStart="@drawable/unit"
                          android:layout_marginLeft="2dp"
                          android:text="  Required: "
                          android:textColor="#4B4B4B"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                      <TextView
                          android:id="@+id/units"
                          android:textColor="#4B4B4B"
                          android:text="2 units"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" />
                  </LinearLayout>
              </LinearLayout>

          </LinearLayout>
          <LinearLayout
              android:layout_alignParentEnd="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginStart="10dp"
              android:id="@+id/icons"
              android:gravity="right">


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:id="@+id/Bg"
                  android:text=" O+"
                  android:drawableTop="@drawable/baseline_bloodtype_24"/>
          </LinearLayout>

    </RelativeLayout>
        
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>