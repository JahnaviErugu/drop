<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/progressbarbg">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#EF233C"
                android:startColor="#EF233C"
                android:endColor="#EF233C"/>
            <size
                android:height="15dp"
                android:width="15dp"/>
            <corners android:radius="6dp"/>

        </shape>
    </item>
    <item android:id="@+id/pbar">
        <clip>
            <layer-list>
                <item android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top = "2dp">
                    <shape>
                        <gradient android:angle="90"
                            android:centerColor="#EF233C"
                            android:endColor="#EF233C"
                            android:startColor="#EF233C"></gradient>
                        <corners android:radius="4dp"/>
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>



</layer-list>